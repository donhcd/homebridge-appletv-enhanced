{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["DOM", "ESNext"],
        "rootDir": "src",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "dist",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": ["src/", "eslint.config.mjs"],
    "exclude": ["**/*.spec.ts"]
}
