{
    "name": "homebridge-appletv-enhanced",
    "displayName": "Apple TV Enhanced",
    "version": "0.3.0-beta.4",
    "description": "Plugin that exposes the Apple TV to HomeKit with much richer features than the vanilla Apple TV implementation of HomeKit.",
    "main": "dist/index.js",
    "author": "Maximilian Leith",
    "scripts": {
        "lint": "eslint src/**.ts --max-warnings=0",
        "watch": "rimraf -I ./dist && npm run buildOsCheck && npm install && npm run build && npm link && nodemon",
        "build": "rimraf -I ./dist && tsc && mkdir dist/html && cp src/html/* dist/html/ && cp ./LICENSE ./dist/LICENSE && cp ./LICENSES_OF_DEPENDENCIES ./dist/LICENSES_OF_DEPENDENCIES && cp ./requirements.txt ./dist/requirements.txt",
        "prepublishOnly": "npm install && npm run lint && npm run build",
        "preinstall": "node dist/checkOS.js",
        "buildOsCheck": "tsc -p tsconfig.checkos.json"
    },
    "engines": {
        "homebridge": "^1.7.0",
        "node": "^20.9.0 || ^18.18.2"
    },
    "keywords": [
        "homebridge-plugin",
        "appletv",
        "apple",
        "tv",
        "homebridge",
        "plugin",
        "playing",
        "state",
        "media",
        "automations",
        "homekit",
        "airplay",
        "roap",
        "companion",
        "smarthome"
    ],
    "license": "MIT",
    "files": [
        "LICENSE",
        "dist",
        "config.schema.json",
        "LICENSES_OF_DEPENDENCIES"
    ],
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/maxileith/homebridge-appletv-enhanced.git"
    },
    "bugs": {
        "url": "http://github.com/maxileith/homebridge-appletv-enhanced/issues"
    },
    "devDependencies": {
        "@types/node": "^18.18.6",
        "@typescript-eslint/eslint-plugin": "^6.9.0",
        "@typescript-eslint/parser": "^6.9.0",
        "eslint": "^8.52.0",
        "homebridge": "^1.7.0",
        "nodemon": "^3.0.1",
        "standard-version": "^9.5.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2",
        "rimraf": "^5.0.5",
        "@types/md5": "^2.3.4"
    },
    "dependencies": {
        "@sebbo2002/node-pyatv": "^7.0.3",
        "md5": "^2.3.0"
    },
    "homepage": "https://github.com/maxileith/homebridge-appletv-enhanced#readme",
    "funding": [
        {
            "type": "paypal",
            "url": "https://www.paypal.me/maxileith/EUR"
        },
        {
            "type": "github",
            "url": "https://github.com/sponsors/maxileith"
        },
        {
            "type": "buymeacoffee",
            "url": "https://www.buymeacoffee.com/maxileith"
        }
    ]
}
