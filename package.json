{
    "name": "homebridge-appletv-enhanced",
    "displayName": "Homebridge Apple TV Enhanced",
    "version": "0.1.0-beta.8",
    "description": "Plugin that exposes the Apple TV to HomeKit with much richer features than the vanilla Apple TV implementation of HomeKit.",
    "main": "dist/index.js",
    "author": "Maximilian Leith",
    "scripts": {
        "lint": "eslint src/**.ts --max-warnings=0",
        "watch": "npm run build && npm link && nodemon",
        "build": "npm ci && rm -r ./dist && tsc && mkdir dist/html && cp src/html/* dist/html/ && cp ./LICENSE ./dist/LICENSE cp ./LICENSES_OF_DEPENDENCIES ./dist/LICENSES_OF_DEPENDENCIES && cp ./requirements.txt ./dist/requirements.txt",
        "prepublishOnly": "npm run lint && npm run build",
        "postinstall": "node dist/postinstall.js"
    },
    "engines": {
        "homebridge": "^1.6.1",
        "node": "^20.8.1 || ^18.18.2"
    },
    "keywords": [
        "homebridge-plugin",
        "appletv",
        "apple",
        "tv",
        "homebridge",
        "plugin",
        "playing",
        "state",
        "media"
    ],
    "license": "MIT",
    "files": [
        "LICENSE",
        "dist",
        "config.schema.json"
    ],
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/maxileith/homebridge-appletv-enhanced.git"
    },
    "bugs": {
        "url": "http://github.com/maxileith/homebridge-appletv-enhanced/issues"
    },
    "devDependencies": {
        "@types/node": "^18.18.6",
        "@typescript-eslint/eslint-plugin": "^6.9.0",
        "@typescript-eslint/parser": "^6.9.0",
        "eslint": "^8.52.0",
        "homebridge": "^1.6.1",
        "nodemon": "^3.0.1",
        "standard-version": "^9.5.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "@sebbo2002/node-pyatv": "^7.0.3",
        "@types/md5": "^2.3.4",
        "md5": "^2.3.0"
    },
    "homepage": "https://github.com/maxileith/homebridge-appletv-enhanced#readme",
    "funding": {
        "type": "paypal",
        "url": "https://www.paypal.me/maxileith/EUR"
    }
}
